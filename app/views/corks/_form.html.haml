= simple_form_for @cork, html: { multipart: true } do |f|
  - if @cork.errors.any?
    #errors
      %h2
      = pluralize(@cork.errors.count, "error")
      prevented this Cork from saving
      %ul
        - @cork.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.input :title, input_html: { class: 'form-control' }

  .form-group
    = f.input :description, input_html: { class: 'form-control' }

  =f.button :submit, "Create Post!", class: "btn btn-primary"
